<!DOCTYPE html>
<html>
<head>
	<title>Rorauth</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>
<body>

	<% if user_signed_in? %>
	<%= current_user.first_name %> <%= current_user.last_name %> - <%= link_to "Sign_out", destroy_user_session_path, :method => 'delete' %>
	<hr>
	<% end %>

	<%= yield %>

</body>
</html>
